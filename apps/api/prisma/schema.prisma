generator client {
  provider     = "prisma-client"
  output       = "../generated/prisma"
  moduleFormat = "cjs"
}

datasource db {
  provider = "postgresql"
}

enum QuestionType {
  SHORT_ANSWER
  LONG_ANSWER
  SINGLE_CHOICE
  MULTIPLE_CHOICE
  RATING
  DATE
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  createdAt DateTime @default(now())

  surveys Survey[]
}

model Survey {
  id          String   @id @default(uuid())
  title       String
  description String?
  isPublished Boolean  @default(false)
  isAnonymous Boolean  @default(false)
  ownerId     String
  createdAt   DateTime @default(now())

  owner     User       @relation(fields: [ownerId], references: [id])
  questions Question[]
  responses Response[]

  surveyRead       SurveyRead?
  questionsRead    QuestionRead[]
  responsesRead    ResponseRead[]
  aggregateResults AggregateResult[]
}

model Question {
  id           String        @id @default(uuid())
  surveyId     String
  text         String
  type         QuestionType
  required     Boolean       @default(false)
  order        Int
  survey       Survey        @relation(fields: [surveyId], references: [id], onDelete: Cascade)
  options      Option[]
  answers      Answer[]
  questionRead QuestionRead?
}

model Option {
  id         String   @id @default(uuid())
  questionId String
  label      String
  value      String
  order      Int
  question   Question @relation(fields: [questionId], references: [id], onDelete: Cascade)
}

model Response {
  id           String        @id @default(uuid())
  surveyId     String
  userId       String?
  createdAt    DateTime      @default(now())
  survey       Survey        @relation(fields: [surveyId], references: [id], onDelete: Cascade)
  answers      Answer[]
  responseRead ResponseRead?
}

model Answer {
  id         String      @id @default(uuid())
  responseId String
  questionId String
  value      Json
  response   Response    @relation(fields: [responseId], references: [id], onDelete: Cascade)
  question   Question    @relation(fields: [questionId], references: [id])
  answerRead AnswerRead?
}

// Read Models

model SurveyRead {
  id            String   @id
  title         String
  isPublished   Boolean
  questionCount Int
  responseCount Int
  createdAt     DateTime
  survey        Survey   @relation(fields: [id], references: [id])
}

model QuestionRead {
  id       String       @id
  surveyId String
  text     String
  type     QuestionType
  order    Int
  survey   Survey       @relation(fields: [surveyId], references: [id])
  question Question     @relation(fields: [id], references: [id])
}

model ResponseRead {
  id        String   @id
  surveyId  String
  createdAt DateTime
  survey    Survey   @relation(fields: [surveyId], references: [id])
  response  Response @relation(fields: [id], references: [id])
}

model AnswerRead {
  id         String @id
  responseId String
  questionId String
  value      Json
  answer     Answer @relation(fields: [id], references: [id])
}

model AggregateResult {
  id         String @id @default(uuid())
  surveyId   String
  questionId String
  metrics    Json
  survey     Survey @relation(fields: [surveyId], references: [id])
}
